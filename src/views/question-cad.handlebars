<script src="/controllers/question-cad.controller.js"></script>

<div class="container-fluid mt-3">
  <div class="card">
    <div class="card-header">
      <h4 class="text-center">Perguntas</h4>
    </div>
    <div class="container-fluid">
      <div class="row mt-2">
        <div class="col-md-12">
          <button
            type="button"
            class="btn btn-sm btn-primary"
            data-toggle="modal"
            data-target="#cadModal"
          >
            Cadastrar
          </button>
          <a class="btn btn-sm btn-secondary" href="/test">Voltar</a>
        </div>
      </div>
      <hr style="width: 90%;" />
      <div id="contTable">
        <div class="text-center mt-4 mb-4 d-none" id="loading">
          <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
          </div>
        </div>
        <table
          class="table table-sm table-striped table-hover table-bordered mb-3"
          id="main-table"
        >
          <thead class="bg-dark text-white">
            <tr>
              <th width="25%">Descrição</th>
              <th width="13%">A</th>
              <th width="13%">B</th>
              <th width="13%">C</th>
              <th width="13%">D</th>
              <th width="11%">E</th>
              <th width="2%">Correta</th>
              <th width="5%"></th>
            </tr>
          </thead>
          <tbody>
            {{#each test.perguntas}}
              <tr>
                <td>{{this.descricao}}</td>
                <td>{{this.A}}</td>
                <td>{{this.B}}</td>
                <td>{{this.C}}</td>
                <td>{{this.D}}</td>
                <td>{{this.E}}</td>
                <td>{{this.opcaoCorreta}}</td>

                <td class="text-center">
                  <button
                    type="button"
                    class="btn btn-sm btn-primary"
                    data-toggle="modal"
                    data-target="#modModal-{{this.descricao}}"
                  >
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  </button>
                  <button
                    type="button"
                    onclick="remove({{this.idTeste}}, '{{this.descricao}}')"
                    class="btn btn-sm btn-danger"
                  >
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  </button>
                </td>
              </tr>

                  <div
                    class="modal fade"
                    id="modModal-{{this.descricao}}"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="modModal"
                    aria-hidden="true"
                    >
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modModal">Editar Pergunta</h5>
                            <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                            >
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                            <div class="col-md-12">
                                <label for="descricao">Pergunta</label>
                                <input
                                type="text"
                                value="{{this.descricao}}"
                                name="pergunta-descricao-mod"
                                id="pergunta-descricao-mod"
                                class="form-control form-control-sm"
                                />
                            </div>
                            </div>
                            <hr />
                            <div class="row">
                            <div class="col-md-12">
                                <label for="descricao">Descrição A</label>
                                <input
                                type="text"
                                name="desc-a-mod"
                                id="desc-a-mod"
                                value="{{this.A}}"
                                class="form-control form-control-sm"
                                />
                            </div>
                            </div>
                            <div class="row">
                            <div class="col-md-12">
                                <label for="descricao">Descrição B</label>
                                <input
                                type="text"
                                name="desc-b-mod"
                                id="desc-b-mod"
                                value="{{this.B}}"
                                class="form-control form-control-sm"
                                />
                            </div>
                            </div>
                            <div class="row">
                            <div class="col-md-12">
                                <label for="descricao">Descrição C</label>
                                <input
                                type="text"
                                name="desc-c-mod"
                                id="desc-c-mod"
                                value="{{this.C}}"
                                class="form-control form-control-sm"
                                />
                            </div>
                            </div>
                            <div class="row">
                            <div class="col-md-12">
                                <label for="descricao">Descrição D</label>
                                <input
                                type="text"
                                name="desc-d-mod"
                                id="desc-d-mod"
                                value="{{this.D}}"
                                class="form-control form-control-sm"
                                />
                            </div>
                            </div>
                            <div class="row">
                            <div class="col-md-12">
                                <label for="descricao">Descrição E</label>
                                <input
                                type="text"
                                name="desc-e-mod"
                                id="desc-e-mod"
                                value="{{this.E}}"
                                class="form-control form-control-sm"
                                />
                            </div>
                            </div>
                            <hr />
                            <div class="row">
                            <div class="col-md-12">
                                <label for="descricao">Opção correta</label>
                                <select id="opcao-correta-mod" class="form-control form-control-sm">
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                                <option value="E">E</option>
                                </select>
                            </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button
                            type="button"
                            onclick="modify({{this.idTeste}}, '{{this.descricao}}')"
                            data-dismiss="modal"
                            class="btn btn-primary"
                            >Salvar</button>
                        </div>
                        </div>
                    </div>
                    </div>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div><!--FIM CONTAINER CARD-->
</div>

<div
  class="modal fade"
  id="cadModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="cadModal"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cadModal">Cadastrar Pergunta</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <label for="descricao">Pergunta</label>
            <input
              type="text"
              name="pergunta-descricao"
              id="pergunta-descricao"
              class="form-control form-control-sm"
            />
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="col-md-12">
            <label for="descricao">Descrição A</label>
            <input
              type="text"
              name="desc-a"
              id="desc-a"
              class="form-control form-control-sm"
            />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label for="descricao">Descrição B</label>
            <input
              type="text"
              name="desc-b"
              id="desc-b"
              class="form-control form-control-sm"
            />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label for="descricao">Descrição C</label>
            <input
              type="text"
              name="desc-c"
              id="desc-c"
              class="form-control form-control-sm"
            />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label for="descricao">Descrição D</label>
            <input
              type="text"
              name="desc-d"
              id="desc-d"
              class="form-control form-control-sm"
            />
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label for="descricao">Descrição E</label>
            <input
              type="text"
              name="desc-e"
              id="desc-e"
              class="form-control form-control-sm"
            />
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="col-md-12">
            <label for="descricao">Opção correta</label>
            <select id="opcao-correta" class="form-control form-control-sm">
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D">D</option>
              <option value="E">E</option>
            </select>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          onclick="save({{test.id}})"
          data-dismiss="modal"
          class="btn btn-primary"
        >Salvar</button>
      </div>
    </div>
  </div>
</div>