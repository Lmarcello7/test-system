<script src="/controllers/test-cad.controller.js"></script>

<div class="container-fluid mt-3">
        <h2 class="text-center">Testes</h2>
        <hr>
        <div class="container-fluid">
            <div class="row mt-2">
                <div class="col-md-12">
                    <a class="btn btn-sm btn-secondary" href="/" >Voltar</a>
                </div>
            </div>
            <hr style="width: 90%;">
            <div id="contTable">
                <div class="text-center mt-4 mb-4 d-none" id="loading">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <table class="table table-sm table-striped table-hover table-bordered mb-3" id="main-table">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th width="5%">Código</th>
                            <th width="90%">Descrição</th>
                            <th width="5%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each tests}}
                            <tr>
                                <td class="text-center">{{ this.id }}</td>
                                <td>{{ this.descricao }}</td>
                                <td class="text-center">
                                    <a type="button" href="/test/{{ this.id }}/resolve" title="Resolver test" class="btn btn-sm btn-secondary">
                                        <i class="fa fa-file-text" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
</div>

<div class="modal fade" id="cadModal" tabindex="-1" role="dialog" aria-labelledby="cadModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cadModal">Cadastrar Teste</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label for="descricao">Descrição</label>
        <input type="text" name="descricao" id="test-descricao" class="form-control form-control-sm">
      </div>
      <div class="modal-footer">
        <button type="button" onclick="save()" data-dismiss="modal" class="btn btn-primary">Salvar</button>
      </div>
    </div>
  </div>
</div>


