<script src="/controllers/test-cad.controller.js"></script>

<div class="container-fluid mt-3">
        <h2 class="text-center">Testes</h2>
        <hr>
        <div class="container-fluid">
            <div class="row mt-2">
                <div class="col-md-12">
                    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#cadModal">
                        Cadastrar
                    </button>
                    <a class="btn btn-sm btn-secondary" href="/" >Voltar</a>
                </div>
            </div>
            <hr style="width: 90%;">
            <div id="contTable">
                <div class="text-center mt-4 mb-4 d-none" id="loading">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <table class="table table-sm table-striped table-hover table-bordered mb-3" id="main-table">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th width="5%">Código</th>
                            <th width="85%">Descrição</th>
                            <th width="10%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each tests}}
                            <tr>
                                <td class="text-center">{{ this.id }}</td>
                                <td>{{ this.descricao }}</td>
                                <td class="text-center">
                                    <a type="button" href="test/{{ this.id }}/question" title="Cadastrar" class="btn btn-sm btn-success">
                                        <i class="fa fa-plus-square" aria-hidden="true"></i>
                                    </a>

                                    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modModal-{{this.id}}">
                                         <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    </button>

                                    <button type="button" onclick="remove({{ this.id }})" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </td>
                            </tr>

                            <div class="modal fade" id="modModal-{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="modModal" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="modModal">Editar Teste</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <label for="descricao">Descrição</label>
                                        <input type="text" name="descricao" value="{{ this.descricao }}" id="test-descricao-mod-{{ this.id }}" class="form-control form-control-sm">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" onclick="modify({{ this.id }})" data-dismiss="modal" class="btn btn-primary">Salvar</button>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
</div>

<div class="modal fade" id="cadModal" tabindex="-1" role="dialog" aria-labelledby="cadModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cadModal">Cadastrar Teste</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label for="descricao">Descrição</label>
        <input type="text" name="descricao" id="test-descricao" class="form-control form-control-sm">
      </div>
      <div class="modal-footer">
        <button type="button" onclick="save()" data-dismiss="modal" class="btn btn-primary">Salvar</button>
      </div>
    </div>
  </div>
</div>


